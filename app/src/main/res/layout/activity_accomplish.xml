<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accomplish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activitytest.example.com.gloryscience.Accomplish">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accomplish_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/number"
            android:background="#FDFDFD">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:text="编号  123456789"/>
            <ImageView
                android:id="@+id/number_id"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_time"
            android:layout_below="@id/number"
            android:background="#FDFDFD">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:text="时间  2017年5月2日 13:00"/>
            <ImageView
                android:id="@+id/time"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_address"
            android:layout_below="@id/layout_time"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FDFDFD">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:text="地址  诚挚路22号"/>
            <ImageView
                android:id="@+id/address"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_name"
            android:layout_below="@id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FDFDFD">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:text="户名  张三"/>
            <ImageView
                android:id="@+id/employee_name"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_tel"
            android:layout_below="@id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FDFDFD">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:text="电话  17712345678"/>
            <ImageView
                android:id="@+id/employee_tel"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_doortime"
            android:layout_below="@id/layout_tel"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FDFDFD">
            <TextView
                android:id="@+id/tv_door_time"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp" />
            <ImageView
                android:id="@+id/employee_doortime"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_reason"
            android:layout_below="@id/layout_doortime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FDFDFD">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:text="故障原因  *****"/>
            <ImageView
                android:id="@+id/trouble_reason"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_fixway"
            android:layout_below="@id/layout_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FDFDFD">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:text="修复手段  *****"/>
            <ImageView
                android:id="@+id/employee_fixway"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_other_information"
            android:layout_below="@id/layout_fixway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FDFDFD">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="34dp"
                android:gravity="center|left"
                android:textSize="18dp"
                android:text="备注其它  *****"/>
            <ImageView
                android:id="@+id/employee_other_information"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_width="61dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accomplish_title"
        android:orientation="horizontal"
        android:background="#ff9933">

        <ImageView
            android:id="@+id/accomplish_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="13dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:src="@drawable/back_arrow"
            android:text="返回"/>
        <TextView
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="完成"
            android:textColor="#000"
            android:padding="6dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/task_submit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#ff9933"
            android:textColor="#000"
            android:text="提交"/>
    </LinearLayout>
</RelativeLayout>
