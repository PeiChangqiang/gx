<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spinner_reason"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="activitytest.example.com.gloryscience.SpinnerReason">
    <LinearLayout
        android:id="@+id/reason_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退单原因：    "/>
        <Spinner
            android:id="@+id/cancel_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="#ccffff"
            android:entries="@array/spingarr"/>
    </LinearLayout>
    <EditText
        android:id="@+id/text_remark"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textCursorDrawable="@null"
        android:layout_margin="20dp"
        android:gravity="top"
        android:background="@drawable/description"
        android:layout_below="@id/reason_cancel"
        android:hint="备注..."/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_remark"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/description"
            android:text="确定"/>
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/description"
            android:layout_marginLeft="10dp"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>
