<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activitytest.example.com.gloryscience.Settings"
    android:background="#F6F6F7">

    <activitytest.example.com.common.CommonTitle
        android:id="@+id/common_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/quit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#FDFDFD"
        android:padding="4dp"
        android:textSize="16sp"
        android:text="退出登录"/>

    <TextView
        android:id="@+id/count_and_safe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/common_head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:background="#FDFDFD"
        android:textSize="16sp"
        android:padding="4dp"
        android:text="账号与安全"/>

    <TextView
        android:id="@+id/about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFDFD"
        android:text="关于软件"
        android:padding="4dp"
        android:textSize="16sp"
        android:layout_below="@id/count_and_safe"
        android:layout_marginTop="1dp"/>
</RelativeLayout>
